{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "lib": ["ES6"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@modules/*": ["modules/*"],
            "@shared/*": ["shared/*"]
        },
        "noImplicitAny": false
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/@types/**/*"]
}
